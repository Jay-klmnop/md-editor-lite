    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "lucide-react": "^0.562.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "style": "dist/style.css"
}
